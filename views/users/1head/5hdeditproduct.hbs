<div>
    <form method="post" action="/head/edit-product" enctype="multipart/form-data">
        <label for="name">name of item</label>
        <input type="text" name='name' value="{{product.name}}">
        <select name="designer">
            <option value="{{product.designer}}">{{product.designer.firstName}} {{product.designer.lastName}}</option>
        </select>
        <select name="editors"> <!-- 2 maximum to implement -->
            {{#each product.editors}}
